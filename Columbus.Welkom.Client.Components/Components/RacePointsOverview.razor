<RadzenCard Variant="Variant.Outlined">
    <RadzenRow AlignItems="AlignItems.Center">
        @foreach (RacePoints racePoints in RacePoints)
        {
            <RadzenColumn Size="3" SizeLG="2">
                @racePoints.RaceCode:
            </RadzenColumn>
            <RadzenColumn Size="3" SizeLG="2">
                @racePoints.Points
            </RadzenColumn>
        }
    </RadzenRow>
</RadzenCard>

@code {
    [Parameter, EditorRequired]
    public IEnumerable<RacePoints> RacePoints { get; set; } = [];
}